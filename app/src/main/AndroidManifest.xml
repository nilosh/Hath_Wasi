<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fyp.ui.hath_wasi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Hath Wasi"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Screens.InstructionsPage" />
        <activity android:name=".Screens.ChooseLevel" />
        <activity
            android:name=".Screens.SplashScreen"
            android:noHistory="true" />
        <activity
            android:name=".Screens.ScoresPage"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Screens.GamePage"
            android:screenOrientation="userLandscape" />
        <activity
            android:name=".Screens.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>